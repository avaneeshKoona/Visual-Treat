{
    for(var i=0;i < arr.length; i++)
    {
        document.getElementById("div"+i).style.backgroundColor = "orange";
        await new Promise((resolve,reject) => setTimeout(resolve,SPEED));
        if(arr[i]==key)
        {
            document.getElementById("div"+i).style.backgroundColor = "green";
            return true;
        }
        await new Promise((resolve,reject) => setTimeout(resolve,SPEED));
