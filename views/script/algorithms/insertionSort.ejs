async function insertionSort()
{
    var key,i,j;
    for(i=0;i < arr.length; i++)
    {
      key = arr[i];
      <!-- document.getElementById("div"+i).style.backgroundColor = "rgba(255, 0, 0, 0.781)" -->
      document.getElementById("div"+i).style.backgroundColor = "rgba(255, 0, 0, 0.781)"
      await new Promise((resolve, reject) => setTimeout(resolve, SPEED));
      document.getElementById("div"+i).style.backgroundColor = "rgba(247, 231, 7, 0.651)";
      for(j=i-1; j >= 0&&key < arr[j]; j--)
      {
        document.getElementById("div"+j).style.backgroundColor = "orange";
        await new Promise((resolve, reject) => setTimeout(resolve, SPEED));
        document.getElementById("div"+j).style.backgroundColor = "rgba(247, 231, 7, 0.651)";
        arr[j+1]=arr[j];
        document.getElementById("div"+(j+1)).style.height = arr[j+1]*10+"px";
        document.getElementById("div"+(j+1)).innerHTML = arr[j+1];
        document.getElementById("div"+(j+1)).style.backgroundColor = "rgba(8, 255, 41, 0.534)";
        await new Promise((resolve, reject) => setTimeout(resolve, SPEED));
        document.getElementById("div"+(j+1)).style.backgroundColor = "rgba(247, 231, 7, 0.651)";
      }
        arr[j+1]=key;
        document.getElementById("div"+(j+1)).style.height = arr[j+1]*10+"px";
        document.getElementById("div"+(j+1)).innerHTML = arr[j+1];
        document.getElementById("div"+(j+1)).style.backgroundColor = "rgba(0, 0, 255, 0.712)";
        await new Promise((resolve, reject) => setTimeout(resolve, SPEED));
        document.getElementById("div"+(j+1)).style.backgroundColor = "rgba(247, 231, 7, 0.651)";
    }

    for(var i=0; i < arr.length; i++)
    {
        document.getElementById("div"+i).style.backgroundColor = "rgb(187, 255, 0)";
        await new Promise((resolve, reject) => setTimeout(resolve, SPEED));
    }

}