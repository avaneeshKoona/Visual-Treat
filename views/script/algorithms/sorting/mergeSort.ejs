
// MERGE SORT IMPLEMENTATION//

async function merge(l,h) // divides the main array into smaller parts
{
    if(l===h)
        return;    

    var mid = Math.floor((l+h)/2);
    await merge(l,mid);
    await merge(mid+1,h); 
    await merge_sort(l,mid,h);
}



